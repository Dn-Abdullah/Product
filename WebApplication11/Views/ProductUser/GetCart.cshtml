@model IEnumerable<WebApplication11.Models.ProductModel>

@{
    ViewData["Title"] = "GetCart";
}

<table class="p-3">
    @foreach (var item in Model)
    {
        <tbody class=" m-5">
            <tr>
                <td class="col-sm-6">
                    <img src="@Url.Content("~/Uploads/" +item.ProfilePicture)" class="img-fluid w-25" alt="Error" />
                </td>
                <td class="col-sm-3">
                    <div class="fs-5 me-5">
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </div>
                </td>
                <td class="col-sm-3 fs-5">

                    $@Html.DisplayFor(modelItem => item.ProductPrice)
                <td>
                <td>
                    <div class=" m-1">
                         <a type="button" class="btn btn-secondary m-2"  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                  </div>
                </td>
            </tr>
          
        </tbody>

    }
</table>